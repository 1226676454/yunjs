/* pages/my/kechen/detail/index.wxss */
.bannerimg{
    width: 100%;
    height: 300rpx;
}



.mtop30 {
    margin-top: 30rpx;
}

.containner {
    background: #f5f5f5;
    font-size: 28rpx;
    color: #323232;
    padding-bottom: 100rpx;
}

.itemClass {
    background: #fff;
    padding: 25rpx 30rpx;
}

.titleWarp {
    padding-bottom: 25rpx;
    justify-content: space-between;
    border-bottom: 1px solid #dcdcdc;
    font-size: 32rpx;
}

.category .title {
    font-family: PingFang-SC-Bold;
}

.category .type {
    color: #63afe0;
}

.content {
    padding-top: 20rpx;
}

.category .item {
    line-height: 42rpx;
}

.price {
    color: #da0808;
}

.hasAddress {
    justify-content: space-between;
}

.go {
    align-items: center;
    color: #63afe0;
}

.go image {
    width: 20rpx;
    height: 30rpx;
    margin-left: 20rpx;
}

.scroll-view_H {
    width: 100%;
    white-space: nowrap;
}

.scroll-view_H .flex_column{
    display: inline-block;
    width: 140rpx;
    margin-right: 20rpx;
}

.scroll-view_H .types {
    width: 140rpx;
    height: 50rpx;
    border: 1px solid #63afe0;
    color: #63afe0;
    font-size: 28rpx;
    text-align: center;
    line-height: 50rpx;
    border-radius: 10rpx;
}

.scroll-view_H .surplus {
    width: 140rpx;
    font-size: 22rpx;
    text-align: center;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: #969696;
    margin-top: 15rpx;
    margin-bottom: 5rpx;
}

.scroll-view_H .flex_column.on .types {
    background: #63afe0;
    color: #fff;
}

.scroll-view_H .flex_column.on .surplus {
    color: #63afe0;
}

.selectClass .details view{
    line-height: 42rpx;
}

