/* pages/my/user/index.wxss */
page{
    width: 100%;
    height: 100%;
}

.containner{
    width: 100%;
    min-height: 100%;
    color: #323232;
    background: #F5F5F5;
    font-size: 30rpx;
}
.flex_row{
    align-items: center;
    background: #fff;
    border-bottom: 1px solid #F5F5F5;
    padding: 20rpx;
}

.left{
    width: 180rpx;
}
.add{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    background: rgba(99, 224, 140, 1);
    text-align: center;
    line-height: 100rpx;
    font-size: 36rpx;
    font-family: PingFang-SC-Bold;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
}

input{
    width: 500rpx;
}

image{
    width: 120rpx;
    height: 120rpx;
    background: rgb(245, 242, 242);
    border-radius: 50%;
}

.flex_rows{
    display: flex;
    flex-direction: row;
}

radio{
    transform:scale(0.7);

}

.sex label{
    margin-right: 30rpx;
    align-items: center;
}
.sex label:last-child{
    margin-right: 0;
}