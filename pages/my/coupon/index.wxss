/* pages/my/coupon/index.wxss */
page{
    width: 100%;
    height: 100%;
}


.containner{
    width: 100%;
    height: 100%;
    background: #f5f5f5;
    color: #4a4a4a;
    font-size: 30rpx;
    box-sizing: border-box;
    padding: 60rpx 0 80rpx 0;
}

.nav{
    background: #fff;
    position: fixed;
    top:0;
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
   
}
.nav view{
    box-sizing: border-box;
    border-bottom: 1px solid #fff;
     flex: 1;
     text-align: center;
}

.nav view.on{
    color: #63E08C;
    border-color: #63E08C;
}

.bottomNav{
    background: #63E08C;
    color: #fff;
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 34rpx;
}

.bottomNav view{
    flex: 1;
    text-align: center;
    box-sizing: border-box;
    border-right: 1px solid #fff;
}

.bottomNav view:last-child{
    border-right: none;
}

.content{
    height: 100%;
}


.coupon {
    position: relative;
    width:660rpx;
    height:230rpx;
    margin: 15rpx auto;
}

.couponImg {
    width: 660rpx;
    height: 230rpx;
}

.couponContent {
    width: 520rpx;
    position: absolute;
    top: 20rpx;
    left:70rpx 
}

.head {
    justify-content: space-between;
    align-items: flex-start;
}

.price {
    font-size: 48rpx;
    font-family: PingFang-SC-Bold;
    font-weight: bold;
    color: #da0808;
}

.condition {
    font-size: 24rpx;
    color: #969696;
    margin-left: 15rpx;
    margin-top:-2rpx;

}

.couponName {
    font-size: 30rpx;
    font-family: PingFang-SC-Bold;
    font-weight: bold;
    color: rgba(50, 50, 50, 1);
    margin-top: 6rpx;
}


.address{
    margin: 10rpx 0;
}
.address, .term {
    font-size: 28rpx;
    color: #323232;
}

.mask{
    background: rgba(0,0,0,.3);
    position: fixed;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
    font-size: 30rpx;
    color: #969696
}

.box{
    position: absolute;
    top:calc(50% - 280rpx);
    left:calc(50% - 250rpx);
    background: #f8f8f8;
    width: 500rpx;
    height: 260rpx;
    border-radius: 5px;
}

.top{
    height: 180rpx;
    border-bottom: 1px solid #eaeaea;
    box-sizing: border-box; 
}
.title{
    color: #4a4a4a;
    text-align: center;
    line-height: 80rpx;
}

.couponInput{
    width: 400rpx;
    background: #fff;
    height: 65rpx;
    margin: 10rpx auto;
    border-radius: 5px;
    border: 1px solid #eaeaea;
    padding-left: 10rpx;
}
.bottom{
    height: 80rpx;
}
.bottom view{
    flex: 1;
    text-align: center;
    line-height: 80rpx;
    box-sizing: border-box; 
}

.bottom view{
    border-right: 1px solid #eaeaea;
}
.bottom view:last-child{
    border-right: none;
    color: #1aad16;
}

