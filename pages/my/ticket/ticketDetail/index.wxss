/* pages/my/ticket/ticketDetail/index.wxss */
.mtop30 {
    margin-top: 30rpx;
}

.containner {
    background: #f5f5f5;
    font-size: 28rpx;
    color: #323232;
    padding-bottom: 100rpx;
}

.cardWarp {
    position: relative;
    width:100%;
    height: 300rpx;
    color: #fff;
}

.cardWarp image {
    width:100%;
    height: 300rpx;
}

.cardWarp .details{
    position: absolute;
    width: 100%;
    height: 300rpx;
    top: 0;
}
.cardWarp .details .left{
    width: 80%;
    height: 300rpx;
    border-right: 1px dashed #fff;
    box-sizing: border-box;
}

.left .title{
    margin: 10rpx 0 0 40rpx;
}

.left .tip{
    margin: 50rpx 0 0 40rpx;
    font-size: 24rpx;
}

.left .price{
    margin: 50rpx 0 0 40rpx;
    font-size: 24rpx;
}

.left .explains{
    margin: 50rpx 0 0 40rpx;
    font-size: 18rpx;
}

.cardWarp .details .right{
    width: 20%;
    height: 300rpx;
    align-items: center;
    justify-content: center;
}

.ticket{
    font-size: 20rpx;
    color: #DCDCDC;
}


.itemClass {
    background: #fff;
    padding: 25rpx 30rpx;
}

.titleWarp {
    padding-bottom: 25rpx;
    justify-content: space-between;
    border-bottom: 1px solid #dcdcdc;
    font-size: 32rpx;
}

.category .title {
    font-family: PingFang-SC-Bold;
    font-weight: bold;
}

.category .type {
    color: #63afe0;
}

.content {
    padding-top: 20rpx;
}

.category .item {
    line-height: 42rpx;
}

.item .name {
    min-width: 90rpx;
}

.jihuo{
    align-items:center;
    margin: 10rpx 0;
}

.color{
    width:64rpx;
height:40rpx;
background:rgba(99,175,224,1);
border-radius:10rpx;
}

.item .value text {
    display: inline-block;
    width: 64rpx;
    height: 48rpx;
    background: rgba(255, 255, 255, 1);
    border: 1px solid #63AFE0;
    color: #63AFE0;
    border-radius: 10rpx;
    text-align: center;
    line-height: 48rpx;
    margin-right: 20rpx;
}

.item .value text.on{
    color: #fff;
    background: #63AFE0;
}

.price {
    color: #da0808;
}

.hasAddress {
    justify-content: space-between;
}

.go {
    align-items: center;
    color: #63afe0;
}

.go image {
    width: 20rpx;
    height: 30rpx;
    margin-left: 20rpx;
}



.selectClass .details view {
    line-height: 42rpx;
}

.baoming {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    background: rgba(99, 224, 140, 1);
    text-align: center;
    line-height: 100rpx;
    font-size: 36rpx;
    font-family: PingFang-SC-Bold;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
}




.topwarp{
    background: #fff;
    font-size:28rpx;
    padding:20rpx;
}

