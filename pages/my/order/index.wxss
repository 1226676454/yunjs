/* pages/my/order/index.wxss */
page{
    width: 100%;
    height: 100%;
}

.containner{
    width: 100%;
    min-height: 100%;
    background: #F5F5F5;
    color: #323232;
    font-size: 28rpx
}

.nav{
    background: #fff;
    font-size: 32rpx;
    position: fixed;
    top:0;
    width: 100%;
}

.nav image{
    width: 1px;
    height: 100rpx;
}

.nav view {
    width: 33.3%;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    box-sizing: border-box;
}

.nav view.on{
    color: #63AFE0;
    border-bottom: 1px solid
}







.icon{
    width: 44rpx;
    height: 44rpx;
}

.text{
    margin-right:10rpx; 
}

.orderlist{
    padding-top: 100rpx;
    /* padding-bottom: 30rpx; */
}


.btn {
    width: 140rpx;
    height: 50rpx;
    background: rgba(255, 125, 37, 1);
    border-radius: 20px;
    text-align: center;
    line-height: 50rpx;
    font-size: 32rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
    margin-bottom: 15rpx;
}

.btn:last-child{
     margin-bottom: 0rpx;
}

.tip{
    position:absolute;
    top:30%;
    width:100%;
    text-align:center;
    font-size:36rpx;
    letter-spacing:2px;
    color:#666;

}