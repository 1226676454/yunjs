/* pages/my/suggest/index.wxss */
page{
    width: 100%;
    height: 100%;
}
.contain{
    width: 100%;
    min-height: 100%;
    display: flex;
    flex-direction: column;
    background: #f5f5f5;
    color: #666;
    font-size: 30rpx;
    box-sizing: border-box;
    padding: 30rpx;
}
.ml60{
    margin-left: 60rpx;
}

textarea{
    border: 1px solid #ccc;
    background: #fff;
    border-radius: 5px;
    font-size: 28rpx;
    margin: 30rpx 0;
    padding: 10rpx;
    width: 100%;
    box-sizing: border-box;
}

.btn{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
    font-size: 34rpx;
    background: #63E08C;
}