/* pages/guanka/index.wxss */
page{
    width: 100%;
    height: 100%;
}

.containner {

  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}


.header{
    padding: 20rpx 20rpx 40rpx;
}
.search-container{
    display: flex;
    flex-direction: row;
    background: #f5f5f5;
    align-items: center;
    border-radius: 50rpx;
}
.search{
    width: 30rpx;
    height: 40rpx;
    margin: 0 20rpx;
}

.input{
    height: 68rpx;
    font-size: 14px;
    width: 500rpx;
}

.sort{
    display: flex;
    flex-direction: row;
    background: #f5f5f5;
    height: 80rpx;
}

.left{
    flex-basis: 210rpx;
     background: #f5f5f5;
}

.right{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100%;
}

.warp {
    width: 100%;
    display: flex;
    flex-direction: row;
     align-items: center;
     justify-content: center;
     font-size: 28rpx;
    
}

.warp view{
    display: flex;
    flex-direction: column;
    margin-left: 10rpx;
}

.right image{
    width: 25rpx;
    height: 14rpx;
}

.sort .right image:first-child{
    margin-bottom: 5rpx;
}

.bottom-container{
    display: flex;
    flex-direction: row;
    height:calc(100% - 208rpx);
}

.type-item{
    height: 60rpx;
    font-size: 28rpx;
    text-align: left;
    line-height: 60rpx;
    padding-left: 30rpx;
}

.cardwarp{
    /* height: 900rpx; */
   height: 100%;
   box-sizing: border-box;
}
 

.card-container{
    padding: 26rpx;
    box-sizing: border-box;
    flex-flow: wrap;
    display: flex;
    flex-direction: row;
}

.card{
    display: flex;
    flex-direction: column;
    margin-bottom: 40rpx;
    width: 250rpx;
}

.card:nth-child(odd){
    margin-right: 30rpx;
}

.card .img{
    position: relative;
    width: 250rpx;
    height: 150rpx;
    border-radius: 3px;
    overflow: hidden;
}
.price{
    color: #F26179;
    font-size: 22rpx;
    position: absolute;
    right: 10rpx;
    bottom: 10rpx;
}
.title{
    font-family: MFLangSong_Noncommercial-Regular;
    color: #696969;
    font-size: 20rpx;
    position: absolute;
    right: 10rpx;
    top: 10rpx;
    font-weight: 600;
}
.card image{
    width: 250rpx;
    height: 150rpx;
    border-radius:3px;
}

.cardName{
    font-size:28rpx;
    line-height: 44rpx;
    text-align: center;
}
.cardAddress{
    font-size: 22rpx;
    text-align: center;
    line-height: 40rpx;
}
.num{
    display: flex;
    flex-direction: row;
    font-size: 22rpx;
    justify-content: space-between;
    padding: 0 15rpx;
}

.on{
    background-color: #63AFE0;
    color: #fff;
}

