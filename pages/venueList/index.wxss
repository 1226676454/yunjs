/* pages/venueList/index.wxss */

page {
    width: 100%;
    height: 100%;
}

.containner {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.header {
    padding: 20rpx 20rpx 40rpx;
}

.search-container {
    display: flex;
    flex-direction: row;
    background: #f5f5f5;
    align-items: center;
    border-radius: 50rpx;
}

.search {
    width: 30rpx;
    height: 40rpx;
    margin: 0 20rpx;
}

.input {
    height: 68rpx;
    font-size: 14px;
    width: 500rpx;
}

.sort {
    display: flex;
    flex-direction: row;
    background: #f5f5f5;
    height: 80rpx;
}

.left {
    flex-basis: 210rpx;
    background: #f5f5f5;
}

.right {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100%;
}

.warp {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
}

.warp view {
    display: flex;
    flex-direction: column;
    margin-left: 10rpx;
}

.right image {
    width: 25rpx;
    height: 14rpx;
}

.sort .right image:first-child {
    margin-bottom: 5rpx;
}

.bottom-container {
    display: flex;
    flex-direction: row;
    height: calc(100% - 208rpx);
}

.type {
    display: flex;
    flex-direction: column;
    align-items: center;
    /* padding-top: 20rpx; */
}

.type-item {
    width: 140rpx;
    height: 50rpx;
    font-size: 28rpx;
    text-align: center;
    line-height: 50rpx;
    color: #63afe0;
    border: 1px solid #63afe0;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.cardwarp {
    height: 100%;
    box-sizing: border-box;
}

.card-container {
    padding: 20rpx;
    box-sizing: border-box;
}

.card {
    width: 100%;
    margin-bottom: 30rpx;
}

.card .venueImg {
    width: 200rpx;
    height: 150rpx;
    border-radius: 10rpx;
}

.venueNews {
    width: calc(100% - 200rpx);
    box-sizing: border-box;
    padding-left: 20rpx;
}

.topwarp {
    align-items: center;
    justify-content: space-between;
}

.venueName {
    font-size: 26rpx;
    font-family: PingFang-SC-Bold;
    font-weight: bold;
    color: #323232;
}

.distance {
    font-size: 24rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(50, 50, 50, 1);
}

.star{
    margin: 20rpx 0;
}

.star image {
    width: 40rpx;
    height: 38rpx;
    margin-right: 10rpx;
}

.address {
    font-size: 24rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(50, 50, 50, 1);
}

.on {
    background-color: #63afe0;
    color: #fff;
}
