/* components/pay/index.wxss */

.flex_row {
    display: flex;
    flex-direction: row;
}

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 2;
}

.playwarp {
    background: #fff;
    position: fixed;
    bottom: 0;
    z-index: 10;
    width: 100%;
    
    box-sizing: border-box;
}
.topwarp{
    padding: 0 30rpx;
}
.playwarp .top {
    position: relative;
    text-align: center;
    color: #323232;
    font-size: 36rpx;
    padding: 25rpx 0;
    box-sizing: border-box;
}

.close {
    position: absolute;
    width: 38rpx;
    height: 38rpx;
    right: 0;
    top: 30rpx;
}

.play-icon {
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
}

.playlist .item {
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0;
    border-bottom: 1px solid #dcdcdc;
    font-size: 30rpx;
}

.playlist .item:last-child {
    border-bottom: none;
}

.select {
    width: 50rpx;
    height: 50rpx;
}

.play {
    width: 100%;
    height: 100rpx;
    font-size: 36rpx;
    font-family: PingFang-SC-Bold;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
    text-align: center;
    line-height: 100rpx;
    background: #63E08C;
}
